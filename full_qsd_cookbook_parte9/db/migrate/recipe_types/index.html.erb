<p id="notice"><%= notice %></p>

<h1>Tipos de Receita</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_types.each do |recipe_type| %>
      <tr>
        <td><%= recipe_type.name %></td>
        <td><%= link_to 'Mostrar', recipe_type %></td>
        <td><%= link_to 'Editar', edit_recipe_type_path(recipe_type) %></td>
        <td><%= link_to 'Excluir', recipe_type, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo de Receita', new_recipe_type_path %>
