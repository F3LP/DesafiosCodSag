<h2>Receitas</h2>

    <% @recipes.each do |recipe| %>
      <h1><%= recipe.title %></h1>
      <ul>

        <li><%= recipe.recipe_type %></li>
        <li><%= recipe.cuisine %></li>
        <li><%= recipe.difficulty %></li>
        <li><%= recipe.cook_time %> minutos</li>
        <%= link_to 'Detalhes', detalhes_recipe_path %>
      </ul>

    <% end %>


