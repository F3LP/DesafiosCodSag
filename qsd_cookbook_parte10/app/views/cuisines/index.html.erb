<p id="notice"><%= notice %></p>

<h1>Cozinhas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuisines.each do |cuisine| %>
      <tr>
        <td><%= cuisine.name %></td>
        <td><%= link_to 'Mostrar', cuisine %></td>
        <td><%= link_to 'Editar', edit_cuisine_path(cuisine) %></td>
        <td><%= link_to 'Excluir', cuisine, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova cozinha', new_cuisine_path %>
